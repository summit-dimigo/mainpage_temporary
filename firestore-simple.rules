// 간단한 Firestore Security Rules (개발/테스트용)
// 주의: 프로덕션 환경에서는 더 엄격한 규칙을 사용하세요

rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // 인증된 사용자만 자신의 데이터에 액세스 허용
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 다른 모든 컬렉션은 기본적으로 거부
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
